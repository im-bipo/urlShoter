<!-- newRequestPage.html -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Request</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        header {
            text-align: center;
            padding: 20px;
            background-color: #3498db;
            color: #fff;
            border-bottom: 1px solid #2980b9;
        }

        .newRequest {
            padding: 20px;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
            font-size: 16px;
        }

        button.home {
            background-color: #3498db;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            text-decoration: none;
            display: inline-block;
        }.shotUrl{
            color: rgb(0, 173, 0);
            font-weight: bold;
        }
        .home{
            margin-top: 15px;
        }
        .home a{
            color: whitesmoke;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="container">
        <header>
            <h1>URL Shortener</h1>
        </header>
        <div class="newRequest">
            <% if (locals.newUrlId) { %>
                <ul>
                    <li>Original Url: <%= newUrlId.ReUrl %></li>
                    <li>Short Url ID: <span class="shotUrl"><%= newUrlId.shortId %></span></li>
                    <li>New Url: http://localhost:8000/<%= newUrlId.shortId %></li>
                </ul>
            <% } %>
            <button class="home"><a href="/">Back to Home</a></button>
        </div>
    </div>
</body>

</html>
